html, body
	background-color #fff
	font-size 14px

*
	list-style none
	margin 0
	padding 0

a, span, i
	&:focus,
	&:hover,
	&:active,
	&:visited
		outline none

a
	&,
	&:focus,
	&:active,
	&:visited
		color cadetblue
		text-decoration none

	&:hover
		color royalblue
		text-decoration none

.container-fluid
	width 1200px

.top-menu
	margin 15px 0
	&__item
		margin 0 20px
		display inline-block
		cursor pointer
		& span:focus
			outline none

.note
	font-size 10px
	color gray