.fx-form
	display block
	margin 20px 0 40px
	align-items stretch
	width 100%
	display flex
	flex-wrap wrap
	justify-content space-around

	&__input
		flex-grow 1
		input[type='text']
			display block
			margin-bottom 5px
			width 100%
	&__note
		display block
		font-size 12px
		color #666
	&__between
		flex-grow 0
		width 15px
	&__button
		flex-grow 0

.fl-form
	display block
	margin 20px 0 40px
	align-items stretch
	width 100%

	&:after
		content ''
		display block
		width 100%
		height 0
		clear both
		overflow hidden

	&__input
		input[type='text']
			display block
			margin-bottom 5px
			width 100%
	&__note
		display block
		font-size 12px
		color #666

	[dir='ltr'] &__input
		display block
		overflow hidden
	[dir='ltr'] &__button
		float right
		margin-left 15px

	[dir='rtl'] &__input
		display block
		overflow hidden
	[dir='rtl'] &__button
		float left
		margin-right 15px
