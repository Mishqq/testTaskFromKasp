.b-form
	margin 20px 0 40px
	display flex
	flex-wrap wrap
	align-items stretch
	width 100%
	white-space nowrap
	justify-content space-around

	&__input
		flex-grow 1

		input[type='text']
			display block
			margin-bottom 5px
			width 100%

	&__note
		display block
		font-size 12px
		color #666

	&__between
		flex-grow 0
		width 15px

	&__button
		flex-grow 0
