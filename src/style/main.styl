html, body
	background-color #fff

*
	list-style none
	margin 0
	padding 0

.container-fluid
	width 1200px

.top-menu
	margin 15px 0
	&__item
		margin 0 20px
		display inline-block
		cursor pointer
		& span:focus
			outline none

.book
	position relative
	margin-bottom 10px
	padding 15px 100px 15px 25px
	width 100%
	min-height 150px
	border 1px solid #ccc
	background-color white

	&__right-info
		position absolute
		width 200px
		right 50px
		top 15px

	&__image
		margin-bottom 10px
		width 100%
		text-align center
		img
			display inline-block
			width 100px
			height auto
	&__isbn
		text-align center
		font-size 12px

	&__panel
		position absolute
		padding 10px 0
		width 40px
		height 100%
		top 0
		right 0
		font-size 20px
		color #666
		background-color #ccc

	&__edit
		text-align center
	&__download-image
		text-align center
	&__delete
		text-align center
		position absolute
		bottom 10px
		width 100%

	&__name
		font-weight bold

	&__info
		&-item
			display block
			font-size 12px
		&-label
			display inline-block
			width 150px
			font-weight bold
		&-data
			display inline-block
			width 150px

	&-list
		display block



