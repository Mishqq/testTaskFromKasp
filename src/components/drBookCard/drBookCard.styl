.dr-book-card,
[dr-book-card],
dr-book-card
	.book
		position relative
		margin-bottom 10px
		padding 15px 100px 15px 25px
		width 100%
		min-height 150px
		border 1px solid #ccc
		background-color white

		&__right-info
			position absolute
			width 200px
			right 50px
			top 15px

		&__image
			margin-bottom 10px
			width 100%
			text-align center
			img
				display inline-block
				width 100px
				height auto
		&__isbn
			text-align center
			font-size 12px

		&__panel
			position absolute
			padding 10px 0
			width 40px
			height 100%
			top 0
			right 0
			font-size 20px
			color #666
			background-color #ccc

		&__edit
			text-align center
		&__download-image
			text-align center
		&__delete
			text-align center
			position absolute
			bottom 10px
			width 100%

		&__name
			margin-bottom 5px
			font-size 18px
			font-weight bold
			&:first-letter
				color steelblue

		&__author
			span:first-child
				font-weight bold
			&-list
				display block
				margin-bottom 20px

		&__info
			&-item
				display block
				margin-bottom 5px
				font-size 12px
			&-label
				display inline-block
				vertical-align top
				width 150px
				font-weight bold
			&-data
				display inline-block
				vertical-align top
				width 150px

		&-list
			display block